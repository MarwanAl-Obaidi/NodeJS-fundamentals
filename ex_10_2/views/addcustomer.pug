doctype html
html
  head
    title Add customer
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
  body.container
    h1 New customer
    form(action='/addcustomer', method='POST')
      div
        input.form-control(type="text", name="firstname", placeholder="First name")
      div
        input.form-control(type="text", name="lastname", placeholder="Second name")
      div
        input.form-control(type="text", name="email", placeholder="Email") 
      div 
        input.form-control(type="number", name="phone", placeholder="Phone") 
      div
        input.btn.btn-primary(type="submit", value="Add")